
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    style="@style/back"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="@drawable/nu_logo"
        android:id="@+id/nulogo1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/nulogo"
        android:layout_alignLeft="@+id/tvappname"
        android:layout_alignStart="@+id/tvappname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="@drawable/logo4"
        android:id="@+id/nulogo"
        android:layout_alignTop="@+id/nulogo1"
        android:layout_alignLeft="@+id/bLogin"
        android:layout_alignStart="@+id/bLogin" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nulogo"
        android:id="@+id/tvappname"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:text="Lost and Found"
        android:textSize="35dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvappname"
        android:layout_centerHorizontal="true"
        android:text="Sign in"
        android:textSize="35dp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="20dp"
        android:id="@+id/tvLogin"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_username"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvLogin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="20dp" />
        <EditText
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/etUsername"
            android:hint="Roll number/Nirma id"
            android:textColorHint="@color/material_blue_grey_800"
            android:textCursorDrawable="@null"
            android:textColor="#010101" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_username"
        android:id="@+id/layout_password"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/layout_username"
        android:layout_alignStart="@+id/layout_username"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="20dp" />
        <EditText
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:password="true"
            android:fontFamily="sans-serif-medium"
            android:textCursorDrawable="@null"
            android:textColor="#010101"
            android:textColorHint="#fefefe" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_password"
        android:text="Login"
        android:textSize="25dp"
        android:id="@+id/bLogin"

        android:layout_centerHorizontal="true"
        style="@style/button"
        />
</RelativeLayout>
