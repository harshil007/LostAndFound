
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nulogonirma"
        android:text="NIRMA"
        android:textSize="55sp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nulogo"
        android:text="UNIVERSITY"
        android:textSize="30sp"

        android:layout_below="@+id/nulogonirma"
        android:layout_centerHorizontal="true" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nulogo"
        android:id="@+id/tvappname"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:text="Lost and Found"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:padding="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvappname"
        android:layout_centerHorizontal="true"
        android:text="Sign in"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="20dp"
        android:id="@+id/tvLogin"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_username"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvLogin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="20dp" />
        <EditText
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/etUsername"
            android:hint="Roll number/Nirma id"
            android:textColorHint="#9E9E9E"

            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_username"
        android:id="@+id/layout_password"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/layout_username"
        android:layout_alignStart="@+id/layout_username"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="20dp" />
        <EditText
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:password="true"
            android:fontFamily="sans-serif-medium"

            android:hint="Roll number/Nirma id"
            android:textColorHint="#fefefe" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_password"
        android:text="Login"
        android:textSize="25dp"
        android:id="@+id/bLogin"

        android:layout_centerHorizontal="true"

        />
</RelativeLayout>
